polkit.addRule(function (action, subject) {
  if (
    action.id == "dev.takimoysha.linuxdesktop.read-evdev" &&
    subject.local &&
    subject.active &&
    subject.isInGroup("devlab")
  ) {
    polkit.log(`dev.takimoysha.linuxdesktop.read-evdev: action=<${action.id}>, subject=<${subject.id}>`)
    return polkit.Result.YES
    // return polkit.Result.NOT_HANDLE
  }
})

